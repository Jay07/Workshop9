BoxLayout:
    orientation: 'vertical'
#    orientation: 'horizontal'


    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: ''
            size_hint: 1, 1

        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_up()

            Button:
                text: 'Down'
                on_press: app.handle_down()

    Button:
        text: 'Convert miles to km'
        on_press: app.handle_convert()

    Label:
        text: ''
        color: (1, 1, 0, 1)
        id: output_km